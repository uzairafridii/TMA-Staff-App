<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textAddConnection"
        android:text="Add New Connection"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/edit_text_margin"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ownerName"
        android:hint="Owner Name"
        android:layout_marginLeft="@dimen/edit_text_margin"
        android:layout_marginTop="@dimen/edit_text_margin"
        android:layout_marginRight="@dimen/edit_text_margin"
        android:inputType="text"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/connectionAddress"
        android:hint="Connection Address"
        android:layout_marginLeft="@dimen/edit_text_margin"
        android:layout_marginTop="@dimen/card_elevation"
        android:layout_marginRight="@dimen/edit_text_margin"
        android:inputType="text"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/referenceNo"
        android:hint="Reference No"
        android:layout_marginLeft="@dimen/edit_text_margin"
        android:layout_marginTop="@dimen/card_elevation"
        android:layout_marginRight="@dimen/edit_text_margin"
        android:inputType="phone"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addConnectionButton"
        android:text="Add New Connection"
        android:backgroundTint="@color/sign_in_txt_color"
        android:layout_marginLeft="@dimen/edit_text_margin"
        android:layout_marginTop="@dimen/edit_text_margin"
        android:layout_marginRight="@dimen/edit_text_margin"

        />


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        android:visibility="gone"

        />

</LinearLayout>