<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppModules.Regulation.Activities.WaterBillsAndLocation">


    <include layout="@layout/app_tool_bar"
        android:id="@+id/billToolbar"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/billToolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvBills"
        android:layout_margin="@dimen/edit_text_margin"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:onClick="addNewConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabConnection"
        android:src="@drawable/ic_add_black_24dp"
        android:backgroundTint="@color/sign_in_txt_color"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/edit_text_margin"
        android:layout_marginBottom="@dimen/edit_text_margin"
        app:borderWidth="0dp"
        app:rippleColor="@color/white"

        />


</RelativeLayout>